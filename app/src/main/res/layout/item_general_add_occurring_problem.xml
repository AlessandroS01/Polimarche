<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/linearLayoutAddOccurringProblem"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
                android:text="Setup Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxAddOccurringProblem"
                android:layout_weight="1"
                android:buttonTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/aldrich"
                android:textStyle="bold"
                android:checked="false"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/visibility_icon"
                android:id="@+id/imageViewVisualizeSetupOccurringProblem"
                android:layout_weight="1"
                android:layout_gravity="center" />

    </LinearLayout>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextAddDescription"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutAddOccurringProblem"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:hint="Description"
            android:textSize="14sp"
            android:fontFamily="@font/aldrich" />
</androidx.constraintlayout.widget.ConstraintLayout>