<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="Add setup in which the problem occurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView84"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/aldrich"
                android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/listAddNewOccurringProblem"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_dialog_box_frames"
                    android:id="@+id/closeAddNewOccurringProblem">

                <TextView
                        android:text="Close"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView78"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:shadowColor="#1A000000"
                        android:shadowRadius="1"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:gravity="center"
                        android:padding="3dp" />

            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:id="@+id/confirmAddNewOccurringProblem">

                <TextView
                        android:text="Confirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView79"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:shadowColor="#1A000000"
                        android:shadowRadius="1"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:gravity="center"
                        android:background="@drawable/border_dialog_box_frames"
                        android:padding="3dp" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>