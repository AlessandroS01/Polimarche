<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LayoutBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sfondo_schermata_login">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">

        <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="296dp"
                android:layout_height="279dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.568"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:text="Login"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp" />

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutMatricola"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:hint="Matricola"
                    android:textColorHint="#FFFFFF"
                    app:boxBackgroundColor="#000000"
                    app:boxStrokeColor="#FFFFFF"
                    app:boxStrokeWidth="50dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/MatricolaInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:backgroundTint="#FFFFFF"
                        android:fontFamily="@font/aldrich"
                        android:inputType="text"
                        android:paddingTop="15dp"
                        android:paddingBottom="5dp"
                        android:textSize="20sp"
                        android:typeface="normal"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutPassword"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:hint="Password"
                    android:textColorHint="#FFFFFF"
                    app:boxBackgroundColor="#000000"
                    app:boxStrokeColor="#FFFFFF"
                    app:boxStrokeWidth="50dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/PasswordInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:backgroundTint="#FFFFFF"
                        android:fontFamily="@font/aldrich"
                        android:inputType="textPassword"
                        android:paddingTop="15dp"
                        android:paddingBottom="5dp"
                        android:textSize="20sp"
                        android:typeface="normal"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="193dp"
                android:layout_height="137dp"
                app:srcCompat="@drawable/logobianco_prova"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.152"
                android:layout_marginStart="36dp"
                app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:id="@+id/signInButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/ripple_effect_sign_in_button"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout2" />

        <TextView
                android:text="SIGN IN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/aldrich"
                app:layout_constraintTop_toTopOf="@+id/signInButton"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="@+id/signInButton"
                app:layout_constraintEnd_toEndOf="@+id/signInButton"
                android:textSize="15sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>