<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="*You can search a practice session of a particular event by checking the check box right below and specifying the event type.\nOtherwise uncheck the checkbox below.\nThe date should be formatted like 2023-08-12 -> YYYY-MM--DD "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:textSize="10sp"
            android:fontFamily="@font/aldrich"
            android:textColor="#FFFFFF" />

    <CheckBox
            android:text="Search by event categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxEventCategories"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:buttonTint="#FFFFFF"
            android:fontFamily="@font/aldrich"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:checked="false" />

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:id="@+id/radioGroupEventCategories"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxEventCategories"
            android:checkedButton="@id/radioButtonEndurance">

        <RadioButton
                android:text="Endurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonEndurance"
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF" />

        <RadioButton
                android:text="Acceleration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonAcceleration"
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF" />

        <RadioButton
                android:text="Skidpad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonSkidpad"
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF" />

        <RadioButton
                android:text="Autocross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonAutocross"
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF" />

    </RadioGroup>

    <androidx.appcompat.widget.SearchView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchViewPracticeSession"
            app:queryHint="Practice session date YYYY-MM-DD"
            android:background="@drawable/search_bar_shape"
            app:iconifiedByDefault="false"
            app:searchIcon="@drawable/search_icon"
            android:focusable="true"
            app:queryBackground="@android:color/transparent"
            android:theme="@style/SearchView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupEventCategories" />


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/listPracticeSession"
            app:layout_constraintTop_toBottomOf="@+id/searchViewPracticeSession"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>