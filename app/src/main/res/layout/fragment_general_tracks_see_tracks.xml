<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="Abilita ricerca sul nome del circuito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chooseWheelsCreateSetup"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#000000" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chooseWheelsCreateSetup"
            android:id="@+id/scrolla"
            android:visibility="visible">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <Button
                    android:text="CIRCUITO 1 CLICCABILE CHE MI APRE DIRETTAMENTE UNA SCHERMATA CHE CONTIENE LE INFORMAZIONI DEL TRACCIATO -
                    VEDERE SE IMPLEMENTARE LA POSSIBILITA' DI AGGIUNGERE LA POSIZIONE SULLA MAPPA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#000000"
                    android:textSize="10sp" />

            <TextView
                    android:text="AGGIUNGERE LA POSSIBILITA' DI MODIFICARE AD ESEMPIO LA LUNGHEZZA DEL TRACCIATO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView666"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="#000000" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>