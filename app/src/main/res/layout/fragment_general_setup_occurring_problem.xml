<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="Setups' code in which the problem occurs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/aldrich"
            android:textColor="#FFFFFF"
            android:textSize="13sp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listOccurringProblemSetup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="10dp" />


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout9">

        <TextView
                android:text="New setup facing the problem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView77"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/aldrich"
                android:textAllCaps="false"
                android:textSize="12sp" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/create_icon_smaller"
                android:id="@+id/imageButtonAddOccurringProblem"
                android:backgroundTint="@color/transparent"
                app:tint="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>